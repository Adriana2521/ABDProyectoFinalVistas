             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ABDProyectoFinal.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">


    <DockPanel Background="WhiteSmoke">

        <Label DockPanel.Dock="Top" Height="40"
               HorizontalContentAlignment="Center"
               Padding="5" 
               Foreground="WhiteSmoke"
               FontWeight="Bold"
               FontSize="20"
               Background="Black"
               FontFamily="/Fonts/Ramyoon.ttf #Ramyoon"
        > ADMINISTRADOR</Label>


        <StackPanel DockPanel.Dock="Right"  Width="110"  >

            <StackPanel.Background>
                <LinearGradientBrush>
                    <GradientStop Color="#f2cc49" Offset="0"></GradientStop>
                    <GradientStop Color="#ffff8e" Offset="0.75"></GradientStop>
                </LinearGradientBrush>
            </StackPanel.Background>



            <Button  BorderThickness="0"  Foreground="White" FontSize="15" 
                    Margin="9">CITAS

                <Button.Style >
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="Black"></Setter>
                        <Setter Property="FontFamily" Value="/Fonts/Schoolwork-Regular.ttf #Schoolwork"></Setter>

                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="TRUE">
                                <Setter Property="Background" Value="#1d1d1d"></Setter>

                            </Trigger>
                        </Style.Triggers>
                    </Style>


                </Button.Style>

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Width="90" 
                                        Height="30"
                                        CornerRadius="20"
                                        Background="{TemplateBinding Background}"
                                        >
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"></ContentPresenter>

                        </Border>
                    </ControlTemplate>
                </Button.Template>


                <!--<StackPanel>

                    <TextBlock FontSize="10" Margin="0" HorizontalAlignment="Center" Foreground="White">AgregarMascota</TextBlock>
                </StackPanel>-->

            </Button>



